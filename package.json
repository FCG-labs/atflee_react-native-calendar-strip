{
  "name": "react-native-calendar-strip",
  "description": "Easy to use and visually stunning calendar component for React Native rewritten by FCG",
  "author": "FCG (https://github.com/FCG-labs)",
  "contributors": [
    "FCG (https://github.com/FCG-labs)"
  ],
  "license": "MIT",
  "version": "2.2.6",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint src/**/*.js __tests__/**/*.js --fix",
    "test": "npm run eslint && jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "contributors:add": "./node_modules/.bin/all-contributors add",
    "contributors:generate": "./node_modules/.bin/all-contributors generate",
    "postinstall": "node-git-hooks"
  },
  "dependencies": {
    "dayjs": "^1.11.9",
    "node-git-hooks": "^1.0.1",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.63.37",
    "all-contributors-cli": "^4.10.1",
    "babel-jest": "^26.6.3",
    "babel-preset-react-native": "^4.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.13.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "^16.13.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-native": "^0.62.0",
    "react-test-renderer": "^16.2.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "verbose": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/img.js"
    ],
    "modulePathIgnorePatterns": [
      "npm-cache",
      ".npm"
    ],
    "collectCoverage": false,
    "globals": {
      "__DEV__": true
    }
  }
}
